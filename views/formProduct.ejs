<%- include("./partials/head.ejs")   %>
<body class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item m-2">
                        <a class="nav-link" href="/users/panel"> panel </a>
                    </li>
                    <li class="nav-item m-2">
                        <a class="nav-link" href="/product"> Tienda </a>
                    </li>
                    <li class="nav-item m-2">
                        <a class="nav-link" href="/users/logOut">Cerrar secion</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h2 class="text-center">Carga tus Productos</h2>

    <form action="/product/createProduct" method="post" class="d-flex w-75 m-auto flex-column">
        <div class="input-group input-group-sm  mb-3 ">
            <span class="input-group-text" id="inputGroup-sizing-sm">nombre</span>
            <input required name="name" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        </div>
        <div class="input-group input-group-sm  mb-3 ">
            <span class="input-group-text" id="inputGroup-sizing-sm">precio</span>
            <input required name="price" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        </div>
        <div class="input-group input-group-sm  mb-3 ">
            <span class="input-group-text" id="inputGroup-sizing-sm">Stock</span>
            <input required name="stock" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        </div>
        <div class="input-group input-group-sm  mb-3 ">
            <span class="input-group-text" id="inputGroup-sizing-sm">description</span>
            <input  name="description" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        </div>
        <div class="input-group input-group-sm  mb-3 ">
            <span class="input-group-text" id="inputGroup-sizing-sm">Imagen</span>
            <input  name="image" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        </div>
        <button type="submit" class="btn btn-primary w-25 m-auto">Cargar Producto</button>
    </form>
    <%- include("./partials/scriptBtps.ejs")   %>
</body>
</html>