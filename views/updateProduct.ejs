<!DOCTYPE html>
 
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    
    <title>modificar productos</title>
</head>
<body>
    <div id="load-form-container">
        <h2>Modificar producto</h2>
        <form action="/product/updateProduct" method="post" >
            <select name="id">
                <% data.forEach(p => { %>
                    <option value="<%- p.id%>" name="<%- p.id%>"> <%- p.name%></option>
                <% })  %> 
            </select>
            <div class="input-group input-group-sm  mb-3 ">
                <span class="input-group-text" id="inputGroup-sizing-sm">nombre</span>
                <input name="name" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="input-group input-group-sm  mb-3 ">
                <span class="input-group-text" id="inputGroup-sizing-sm">precio</span>
                <input  name="price" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="input-group input-group-sm  mb-3 ">
                <span class="input-group-text" id="inputGroup-sizing-sm">Stock</span>
                <input name="stock" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="input-group input-group-sm  mb-3 ">
                <span class="input-group-text" id="inputGroup-sizing-sm">description</span>
                <input  name="description" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="input-group input-group-sm  mb-3 ">
                <span class="input-group-text" id="inputGroup-sizing-sm">Imagen</span>
                <input  name="image" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
            </div>
            
            <button class="btn btn-success" type="submit">Enviar</button>
            
        </form>
        
    
    
    
    <form action="/product/deleteProduct" method="POST">
    
        <select name="id">

            <% data.forEach(p => { %>
            
                <option value="<%- p.id%>" name="<%- p.id%>"> <%- p.name%></option>
                <% })  %> 



        </select>
        <button class="btn btn-danger" type="submit">Eliminar este producto</button>
    
    </form>
    <button class="btn btn-dark"><a href="/users/panel">volver</a></button>
</div>
<%- include("./partials/scriptBtps.ejs")   %>
</body>
</html>